<body>

<h1>Max Hit Calculator</h1>
<div class="calculator">
    <label for="stat">Melee Strength (stat):</label>
    <input type="number" id="stat" placeholder="Enter melee strength">

    <label for="level">Strength Level:</label>
    <input type="number" id="level" placeholder="Enter strength level">

    <button onclick="calculateMaxHit()">Calculate</button>

    <div class="result" id="result">Your max hit will be displayed here.</div>
</div>

<script>
function calculateMaxHit() {
    const stat = parseFloat(document.getElementById('stat').value);
    const level = parseFloat(document.getElementById('level').value);

    if (isNaN(stat) || isNaN(level)) {
        document.getElementById('result').innerText = "Please enter valid numbers for both fields.";
        return;
    }

    const maxHit = (stat / 8 + level + 13 + (stat * level / 64)) / 10;
    document.getElementById('result').innerText = `Your max hit is ${maxHit.toFixed(2)}.`;
}
</script>

